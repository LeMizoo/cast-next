.burger-container {
  position: relative;
  z-index: 1000;
}

.burger-button {
  font-size: 1.5rem;
  background: none;
  border: none;
  cursor: pointer;
}

.burger-menu {
  position: absolute;
  top: 60px;
  right: 0;
  width: 200px;
  background: white;
  border-radius: 8px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  padding: 16px;
  display: flex;
  flex-direction: row;
  gap: 12px;
}

.burger-link {
  text-decoration: none;
  color: #4f46e5;
  font-weight: 500;
}

.burger-link:hover {
  color: #4338ca;
}

.espace-btn {
  background: #4f46e5;
  color: white;
  padding: 8px;
  border-radius: 4px;
  text-align: center;
}
